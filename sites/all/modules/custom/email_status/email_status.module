        }
        if ($status == 1) {
          $picking[$godown]['picking_bulk_process'] = 1;
        }
        if ($status == 0) {
          $picking[$godown]['picking_bulk_pending'] = 1;
        }
      }
    }
  }

  return $picking;
}

