    $rows[] = array('', '', '&lt; 500m', '> 500m', '', '&lt; 500m', '> 500m');
    foreach ($result as $value) {
      $row = [];
      $row['fieldExecutiveName'] = $value['fieldExecutiveName'];
      $total['fieldExecutiveName'] = 'Total';
