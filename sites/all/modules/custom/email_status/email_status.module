function check_product_validation($distributor_id) {
  $subdivisions = variable_get('sku_subdivisions', array('PHsc', 'ZPHsc', 'PSsc', 'ZPSsc', 'DPsc', 'FBsc', 'POsc', 'FJMsc', 'FKPsc'));
  
  $query1 = db_select('node', 'n');
