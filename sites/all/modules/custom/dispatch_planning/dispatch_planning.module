function _get_header_sort($array, $field_name, $order) {
  if ($order == 'asc') {
    uasort($array, function ($a, $b) use ($field_name) {
      if ($a[$field_name] == $b[$field_name]) {
        return 0;
      }
      return ($a[$field_name] < $b[$field_name]) ? -1 : 1;
    });
  }
  else {
    uasort($array, function ($a, $b) use ($field_name) {
      if ($a[$field_name] == $b[$field_name]) {
        return 0;
      }
      return ($a[$field_name] > $b[$field_name]) ? -1 : 1;
    });
  }
  return $array;
}

