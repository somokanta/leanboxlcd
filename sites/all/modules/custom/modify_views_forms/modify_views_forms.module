
<?php

/**
 * hook_form_alter()
 */
function modify_views_forms_form_alter(&$form, &$form_state, $form_id) {
  if(($form_id == 'editableviews-entity-form-picking-report') || ($form_id == 'editableviews-entity-form-party-packing-report') || ($form_id == 'editableviews_entity_form_unloading_form')) {
    $query = db_select('field_data_field_resource_name', 'fps');
    $query->fields('fps', array('field_resource_name_value'));
    $options = $query->execute()->FetchCol();
    $options = array_merge(array('-select-'),$options);
    $multi = array_combine($options, $options);
    if($form_id == 'editableviews-entity-form-picking-report') {
      $field = 'field_picking_pick_supervisor';
    }
    if($form_id == 'editableviews-entity-form-party-packing-report') {
      $field = 'field_party_packing_supervisor';
    }
    if($form_id == 'editableviews_entity_form_unloading_form') {
      $field = 'field_unloading_supervisor';
    }
    foreach ($form['node'] as $key => $value) {
      $form['node'][$key][$field][LANGUAGE_NONE][0]['value']['#type'] = 'select';
      $form['node'][$key][$field][LANGUAGE_NONE][0]['value']['#multiple'] = FALSE;
      $form['node'][$key][$field][LANGUAGE_NONE][0]['value']['#options'] = $multi;
      $form['node'][$key][$field][LANGUAGE_NONE][0]['value']['#size'] = 1;
    }
  }
}

